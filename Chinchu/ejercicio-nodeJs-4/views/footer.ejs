<% if (message) { %>
    <div class="alert alert-primary alert-dismisible fade show" role="alert">
        <div class="col">
            <%- message %>
        </div>
        <div class="col d-flex flex-row-reverse">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<% } %>

<% if (error) { %>
    <div class="alert alert-danger alert-dismisible row fade show" role="alert">
        <div class="col">
            <%- error %>
        </div>
        <div class="col d-flex flex-row-reverse">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<% } %>

</div>


</body>
